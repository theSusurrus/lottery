import {
    AboutSlint,
    Button,
    StandardButton,
    VerticalBox,
    LineEdit,
    HorizontalBox,
    ListView,
    ScrollView,
    StandardButton,
    Palette
} from "std-widgets.slint";

export component AppWindow inherits Window {
    title: "Loteria";
    background: black;

    callback draw_person;
    callback restart;

    in-out property <string> status;
    in-out property <string> list;
    in-out property <string> listFile;
    in-out property <string> winner;

    min-width: 600px;
    preferred-height: 1000px;

    VerticalBox {
        popup := PopupWindow {
            x: parent.width / 3;
            y: parent.height / 2;
            width: parent.width / 3;
            Rectangle {
                height:100%;
                width: 100%;
                background: black;
                border-color: white;
                border-radius: 10px;
                border-width: 2px;
                VerticalBox {
                    padding: 15px;
                    spacing: 10px;
                    Text {
                        font-size: 20px;
                        horizontal-alignment: center;
                        text: "Przeładować listę?";
                        color: red;
                    }
                    HorizontalBox {
                        alignment: stretch;
                        Button {
                            text: "Tak";
                            clicked => {
                                popup.close();
                                restart();
                            }
                        }
                        Button {
                            text: "Nie";
                            clicked => {
                                popup.close();
                            }
                        }
                    }
                }
            }
        }
        VerticalBox {
            alignment: start;
            Text {
                text: list;
                font-size: 16px;
                horizontal-alignment: center;
            }
        }
        VerticalLayout {
            alignment: end;
            VerticalBox {
                Text {
                    text: status;
                    font-size: 16px;
                    horizontal-alignment: center;
                    color: Palette.control-foreground;
                }
                Text {
                    text: winner;
                    font-size: 24px;
                    horizontal-alignment: center;
                    color: Palette.control-foreground;
                }
            }
            Button {
                text: "Wylosuj";
                width: parent.width / 2;
                x: parent.width / 4;
                clicked => { draw_person() }
            }
            HorizontalBox {
                alignment: stretch;
                Text {
                    text: "plik listy";
                    width: parent.width / 3;
                    vertical-alignment: center;
                    horizontal-alignment: right;
                }
                LineEdit {
                    text: listFile;
                    font-size: 12px;
                    width: parent.width / 3;
                }
            }
            Button {
                text: "Przeładuj listę";
                width: parent.width / 2;
                x: parent.width / 4;
                clicked => { popup.show() }
            }
        }
    }
}
